<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet">
    
  <title>Hello, world!</title>
  
</head>

<body class="">
  
  <div class="row">
    <center><h2>!Already Registered Client Detail!</h2></center>

    <div class="row">    
      <div class="col-md-8 offset-md-3" style="background-color: #fff;margin-top: 25px;padding:20px; justify-content: center; margin-left: 200px;">         
    <h5><a class="btn-btn-primary" href="/foodorder"><i class=" fas fa-plus"></i>Create New </a>Client list </h5>
    <link rel="stylesheet" href="style.css">
  <table class="table table-striped">    
    <thead>
        <tr>
          <th>Firstname</th>
          <th>Lastname</th>
          <th>Email</th>
          <th>Password</th>
        
          <th>Mobile no</th>
          <th>Date</th>
          
        </tr>
      </thead>
      <tbody>
        <% data.forEach(cdata =>{%>
        <tr> 
          <td> <%= cdata.name %></td>
              <td> <%= cdata.lname %></td>
              <td> <%= cdata.email %></td>
             
              <td> <%= cdata.pass %></td> 
              <td> <%= cdata.mobile %></td>
              <td> <%= cdata.date %></td>
              <td>
                <a href="/<%= cdata._id %>"><i class="fas fa-check fa-alt" aria-hidden="true"></i></a>
                <a href="/delete/<%= cdata._id %>" onclick="return confirm('Are you sure to delete this record ?');"><i class="fas fa-trash fa-alt" aria-hidden="true"></i></a>
              </td>

        </tr><% })%>
        
      </tbody>
    </table>
    </div>
    </div>
  </div>
</body>
</html>